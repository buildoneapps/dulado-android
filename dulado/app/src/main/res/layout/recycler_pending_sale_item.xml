<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProductPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/ligher_gray" />

    <LinearLayout
        android:id="@+id/container_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProductPhoto"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_userPhoto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="end|center_vertical"
            android:paddingStart="8dp"
            android:src="@color/blue_800"
            android:text="@string/sample_price"
            android:textColor="@color/product_price_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Ayumi"
            android:textColor="@color/product_name_text_color"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:text="gostaria de comprar:"
            android:textColor="@color/product_name_text_color"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_user"
        android:layout_toEndOf="@id/ivProductPhoto"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/sample_product_name"
            android:textColor="@color/product_name_text_color"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:paddingStart="8dp"
            android:text="@string/sample_price"
            android:textColor="@color/product_price_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ivProductPhoto"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight=".5"
            android:background="@drawable/shape_square_stroke"
            android:text="recusar" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:textColor="@color/green_600"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight=".5"
            android:background="@drawable/shape_square_stroke"
            android:text="vender" />
    </LinearLayout>

    <ImageView
        android:background="@color/grey_400_alpha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container_options" />
</RelativeLayout>